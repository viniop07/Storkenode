<main>
 <div class="p-5 mb-4 bg-light rounded-3">
 <div class="container-fluid py-5">
 <h3> Editar cadastro: </h3>
 <div class="card">
 <div class="card-body">
 <form action="/rota_cliente/cliente/editar_cliente" method="POST">
 {{#each clientes}}
 <label for="id_cliente">ID: </label>
 <input type="text"
 name="id_cliente" readonly="true"
 class="form-control"
 value="{{id_cliente}}">
 <br>

<label for="nome">Nome: </label>
 <input type="text" id="nome"
 name="nome" class="form-control"
 value="{{nome}}">
 <br>
 <label for="cpf">CPF: </label>
 <input type="text" id="cpf"
 name="cpf" class="form-control"
 value="{{cpf}}">
 <br>
 <label for="dt_nasc">Data de Nascimento: </label>
 <input type="date" id="dt_nasc"
 name="dt_nasc" class="form-control"
 value="{{dt_nasc}}">
 <br>
 <br>
 <label for="nome">Email: </label>
 <input type="text" id="email"
 name="email" class="form-control"
 value="{{email}}">
 <br>
 <label for="cpf">Senha: </label>
 <input type="password" id="senha"
 name="senha" class="form-control"
 value="{{senha}}">
 <br>
<button type="submit"
 class="btn btn-success">Editar Cliente</button>
 {{/each}}
 </form>
 </div>
 </div>
 </div>
 </div>
</main>